<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.BIND_AUTOFILL_SERVICE"/>
    <uses-permission android:name="android.permission.BIND_INPUT_METHOD" />

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoFillDemo"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="34">
        <activity
            android:name=".SimpleAutoFillActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 自动填充服务 -->
        <service android:name=".SimpleAutoFillService"
            android:exported="true"
            android:label="Simple Auto Fill Service"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE"
            android:supportsInlineSuggestions="true">

            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>
            <meta-data
                android:name="android.autofill"
                android:resource="@xml/service_configuration">
            </meta-data>
        </service>
        <!-- 自定义键盘服务 -->
        <service
            android:name=".SimpleIMEService"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:label="Simple Input Service"
            android:exported="true"
            android:supportsInlineSuggestions="true"
            >
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" >
            </meta-data>
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true"/>
        <activity
            android:name=".AuthActivity"
            android:exported="true"
            android:theme="@style/TranslucentStyle">
        </activity>
    </application>

</manifest>